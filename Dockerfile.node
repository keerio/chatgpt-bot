FROM node:16-buster-slim
USER root
SHELL ["/bin/bash", "-c"]

RUN useradd -m winter && echo "winter:123" | chpasswd && usermod -aG sudo winter


RUN useradd -m appuser
USER appuser
WORKDIR /home/appuser/

RUN NPM_CONFIG_PREFIX=~/.joplin-bin npm install -g joplin
RUN sudo ln -s ~/.joplin-bin/bin/joplin /usr/bin/joplin



